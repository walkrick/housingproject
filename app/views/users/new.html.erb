<h3>Registration</h3>

<%= form_for @user do |f| %>

  <% if @user.errors.present? %>
    <div class="errors">
      <h3>There was an error</h3>
      <ul class="error-list">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
  </div>

  <div>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
  </div>

  <div>
    <%= f.password_field :password, autofocus: true, placeholder: "Password" %>
  </div>

  <div>
    <%= f.submit class: "form-button" %>
  </div>

<% end %>