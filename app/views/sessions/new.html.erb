
<h3>Login</h3>

<%= form_for User.new, url: sessions_path do |f| %>

  <div><%= flash[:error] if flash[:error] %></div>

  <div><%= f.label :username %>
  <%= f.text_field :username %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password_digest %></div>
  
  <div><%= f.submit "Login" %></div>

  <div><%= link_to "Sign up for an account" %></div>

<% end %>